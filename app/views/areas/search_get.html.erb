<div class="form-group w-50 mx-auto">
  <h1>エリア検索</h1>
  <%= form_with url: areas_search_path, local:true, method: :post do |f| %>
    <%= f.label "郵便番号で検索", class: "text-left d-block" %>
    <p><%= f.text_field :zipcode, class:"form-control" %></p>
      <p><%= f.submit "検索", class: "btn btn-primary btn-lg btn-block" %></p>
  <% end %>
</div>